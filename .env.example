# Configuración de Supabase
SUPABASE_URL=
SUPABASE_KEY=
OPENAI_API_KEY=

ELEVENLABS_API_KEY=tu-clave-de-elevenlabs-aqui
ELEVENLABS_VOICE_ID=

# Configuración de YouTube API
YOUTUBE_CLIENT_ID=
YOUTUBE_CLIENT_SECRET=
YOUTUBE_REDIRECT_URI=http://localhost:3000/oauth2callback

FACEBOOK_ACCESS_TOKEN=

# Configuración de Telegram (Notificaciones)
# Para obtener el BOT_TOKEN: habla con @BotFather en Telegram
# Para obtener el CHAT_ID: habla con @userinfobot o usa tu chat ID
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Configuración de Filtro de Canales
# Dejar vacío para procesar todos los canales
# Para filtrar por IDs: separar con comas (ej: abc-123,def-456,ghi-789)
# Para filtrar por nombres: separar con comas (ej: Canal Principal,Canal Secundario)
FILTER_CHANNEL_IDS=
FILTER_CHANNEL_NAMES=Legado de papel,Mami Chula

# Configuración de Cron Jobs
# Formato: true/false para habilitar, número para periodicidad en minutos

# IMPORTANTE: La generación de videos procesa TODOS los canales
# (no respeta el filtro de canales, solo programación y publicación lo respetan)
CRON_VIDEO_GENERATION_ENABLED=true
CRON_VIDEO_GENERATION_MINUTES=10

CRON_PUBLICATION_SCHEDULING_ENABLED=true
CRON_PUBLICATION_SCHEDULING_MINUTES=5

CRON_SOCIAL_PUBLISHING_ENABLED=true
CRON_SOCIAL_PUBLISHING_MINUTES=2

CRON_SCRIPT_GENERATION_ENABLED=true
CRON_SCRIPT_GENERATION_MINUTES=10

CRON_IDEAS_VALIDATION_ENABLED=true
CRON_IDEAS_VALIDATION_MINUTES=5

CRON_ASSETS_GENERATION_ENABLED=true
CRON_ASSETS_GENERATION_MINUTES=8

# Umbrales para validación de stock
UMBRAL_MINIMO_IDEAS=20
UMBRAL_MINIMO_GUIONES=5
UMBRAL_VIDEOS_LISTOS=5

GUIONES_API_URL=http://localhost:3000/api/guiones-cortos/generar

# =============================================================================
# CONFIGURACIÓN DE VENTANAS DE PROGRAMACIÓN
# =============================================================================

# Horas del día para publicar (formato 24h, separadas por comas)
# Ejemplo: 9,12,15,18,21 = publicar a las 9am, 12pm, 3pm, 6pm y 9pm
HORAS_PUBLICACION=9,12,15,18,21

# Desface aleatorio en minutos (para evitar publicaciones exactas en punto)
# Se genera un número aleatorio entre MIN y MAX
MINUTOS_DESFACE_MIN=0
MINUTOS_DESFACE_MAX=45

# Zona horaria para programación
TIMEZONE=America/Mexico_City

# =============================================================================
# CONFIGURACIÓN DE CONSOLA (HEARTBEAT)
# =============================================================================

# URL base del API de gestión de consolas
# En desarrollo: http://localhost:3000/api
# En producción: https://tu-dominio.com/api
API_BASE_URL=http://localhost:3000/api

# ID único de esta consola (dejar vacío para auto-generar)
# Se genera automáticamente al primer arranque si no existe
CONSOLE_ID=

# Intervalo de heartbeat en minutos (por defecto: 5)
HEARTBEAT_INTERVAL_MINUTES=5


CRON_VIDEO_LARGO_GENERATION_ENABLED=false
CRON_VIDEO_LARGO_GENERATION_MINUTES=15